<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.groupproject_2020">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/fsm"
        android:label="@string/app_name"
        android:roundIcon="@drawable/fsm"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroupProject2020">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.GroupProject2020.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DeleteCharActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DeleteMonActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DeleteWeapon"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DeleteArmor"
            android:screenOrientation="portrait" />
        <activity
            android:name=".viewChar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".viewMon"
            android:screenOrientation="portrait" />
        <activity
            android:name=".viewWeapon"
            android:screenOrientation="portrait" />
        <activity
            android:name=".viewArmor"
            android:screenOrientation="portrait" />
        <activity
            android:name=".updatechar_stats"
            android:screenOrientation="portrait" />
        <activity
            android:name=".updateWeapon"
            android:screenOrientation="portrait" />
        <activity
            android:name=".updateArmor"
            android:screenOrientation="portrait" />
    </application>

</manifest>